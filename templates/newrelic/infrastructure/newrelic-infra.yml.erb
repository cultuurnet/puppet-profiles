# Settings documented at: https://docs.newrelic.com/docs/infrastructure/install-infrastructure-agent/configuration/infrastructure-agent-configuration-settings/
license_key: <%= @license_key %>
display_name: <%= @facts['networking']['fqdn'] %>
dns_hostname_resolution: false
pid_file: /run/newrelic-infra/newrelic-infra.pid
<%- if @facts['ec2_metadata'] -%>
cloud_provider: aws
<%- end -%>
log:
  level: <%= @log_level %>
  format: text
  forward: false
  stdout: false
  file: /var/log/newrelic-infra/newrelic-infra.log
  rotate:
    max_size_mb: <%= @log_size_mb.to_s %>
    max_files: <%= @log_max_files.to_s %>
    compression_enabled: true
    file_pattern: newrelic-infra_YYYY.MM.DD.hhmmss.log
custom_attributes:
<%- @custom_attributes.each do |key, value| -%>
  <%= key %>: <%= value%>
<%- end -%>
