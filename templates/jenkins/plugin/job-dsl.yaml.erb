---
jobs: <%- if @configuration['pipelines'].empty? -%>[]
  <%- else -%>
  <%- [@configuration['pipelines']].flatten.each do |pipeline| -%>
  - script: >
      pipelineJob('<%= pipeline['name'].strip.unicode_normalize(:nfd).gsub(/\p{Mn}/, '').downcase.gsub(' ', '-') %>') {
        <%- if pipeline['parameters'] -%>
          parameters {
            <%- pipeline['parameters'].strip.each_line do |line| -%>
              <%= line -%>
            <%- end %>
          }
        <%- end -%>
          displayName('<%= pipeline['name'].strip %>')
        <%- if pipeline['description'] -%>
          description(<%- pipeline['description'].strip.each_line do |line| -%>
                        <%= line -%>
                      <%- end -%>)
        <%- end -%>
        <%- if pipeline['remote_trigger'].is_a? TrueClass -%>
          authenticationToken('<%= scope.call_function('fqdn_rand_string', [32, 'abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789', pipeline['name'] + @configuration['admin_password'].to_s]) %>')
        <%- end -%>
          properties {
            <%- if pipeline['git_url'] =~ /^git@github.com:/ -%>
              githubProjectUrl('https://github.com/<%= pipeline['git_url'][/^.*:(.*).git$/, 1] %>')
            <%- end -%>
              disableConcurrentBuilds()
              pipelineTriggers {
                  triggers {
                    <%- if pipeline['auto_build'].is_a? TrueClass -%>
                      githubPush()
                    <%- end -%>
                    <%- if pipeline['schedule'] -%>
                      <%- pipeline['schedule'].strip.each_line do |line| -%>
                      <%= line -%>
                      <%- end %>
                    <%- end -%>
                  }
              }
              buildDiscarder {
                  strategy {
                      logRotator {
                          numToKeepStr('<%= pipeline['keep_builds'] %>')
                          artifactNumToKeepStr('')
                          daysToKeepStr('')
                          artifactDaysToKeepStr('')
                      }
                  }
              }
          }
          definition {
              cpsScm {
                  scm {
                      git {
                          remote {
                              url('<%= pipeline['git_url'] %>')
                              credentials('<%= pipeline['credential_id'] %>')
                          }
                          branch('<%= pipeline['git_ref'] %>')
                      }
                    <%- if pipeline['jenkinsfile_path'] -%>
                      scriptPath('<%= pipeline['jenkinsfile_path'] %>')
                    <%- else -%>
                      scriptPath('Jenkinsfile')
                    <%- end -%>
                  }
                  lightweight(true)
              }
          }
      }
  <%- end -%>
<%- end -%>
