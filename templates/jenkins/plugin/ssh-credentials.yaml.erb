credentials:
  system:
    domainCredentials:
    - credentials:
      <%- [@configuration['credentials']].flatten.each do |credential| -%>
      - basicSSHUserPrivateKey:
          id: '<%= credential['id'] %>'
          privateKeySource:
            directEntry:
              privateKey: '<%= credential['key'] %>'
          scope: GLOBAL
          username: '<%= credential['id'] %>'
      <%- end -%>
