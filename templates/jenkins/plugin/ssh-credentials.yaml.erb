credentials:
  system:
    domainCredentials:
    - credentials:
      <% [@configuration].flatten.each do |credential| %>
      - basicSSHUserPrivateKey:
          id: '<%= credential['id'] %>'
          privateKeySource:
            directEntry:
              privateKey: |
                <% credential['key'].each_line do |line| %>
                <%= line %>
                <% end %>
          scope: GLOBAL
          username: '<%= credential['id'] %>'
      <% end %>
